---
import Container from "@components/navbarcontainer.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Picture } from "@astrojs/image/components";
import logoText from "assets/logotext.png"
import logoText2 from "assets/logotextwithpic.png"


const menuitems = [
  // {
  //   title: "Features",
  //   path: "#",
  //   children: [
  //     { title: "Action", path: "/" },
  //     { title: "Another action", path: "#" },
  //     { title: "Dropdown Submenu", path: "#" },
  //     { title: "404 Page", path: "/404" },
  //   ],
  // },
  {
    title: "Beranda",
    path: "/",
  },
  {
    title: "Tentang",
    path: "/tentang",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Panduan",
    path: "/panduan",
  },
  {
    title: "Hubungi Kami",
    path: "/contact",
  },
];

---

<Container class="sticky top-0 z-50 bg-darkblue">
  <header class=" flex flex-col lg:flex-row justify-between items-center my-2">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a
        href="/"
        target="_self"
        class="flex gap-1 items-start px-0 justify-start bg-auto lg:justify-center border-0"
        rel="noreferrer prefetch">
          <Picture
          src={logoText2}
          alt="AccounTax Logo"
          widths={[200, 400, 600]}
          sizes="(max-width: 200px) 100vw, 180px"
          loading="eager"
          format="avif"
        />
      </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-white" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3 text-lg text-white">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-gray-600 hover:font-semibold">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <!-- <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="#" style="muted" block size="md">Log in</Link>
          <Link href="#" size="md" block>Sign up</Link>
        </div> -->
      </MenuItems>
    </Astronav>
    <!-- <div>
      <div class="hidden lg:flex items-center gap-4">
        <a href="#">Log in</a>
        <Link href="#" size="md">Sign up</Link>
      </div>
    </div> -->
  </header>
</Container>

